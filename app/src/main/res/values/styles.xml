<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StatusBar" parent="Base.Widget.AppCompat.ActionBar.Solid">
        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:actionBarStyle">@style/StatusBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/StatusBar</item>
    </style>

</resources>
